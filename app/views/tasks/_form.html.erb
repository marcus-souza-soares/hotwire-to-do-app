<%= simple_form_for(task, html: { class: "form", data: { controller: "task", action: "change->task#toggle" } }) do |f| %>
  <div class="mb-3">
    <%= f.input :title, label: "Task Title", input_html: { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :completed, as: :boolean, label: "Completed",
                            input_html: { class: "form-check-input" },
                            wrapper_html: { class: "form-check" },
                            class: "p-2" %>
  </div>

  <div>
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
