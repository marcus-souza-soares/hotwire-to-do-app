<%= turbo_frame_tag dom_id(task) do %>
  <div class="d-flex justify-content-between align-items-center my-2">
    <span><%= task.title %> <%= "(Done)" if task.completed %></span>
    <div>
      <%= link_to "Edit", edit_task_path(task), data: { turbo_frame: dom_id(task) }, class: "btn btn-sm btn-secondary" %>
      <%= link_to "Delete", task, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
<% end %>
